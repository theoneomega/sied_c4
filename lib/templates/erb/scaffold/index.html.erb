<div class="btn-toolbar">
  <%%if can? :new, <%= singular_table_name.titlecase %> %>
  <%%= link_to t(:new, :default => t('helpers.links.edit')), new_<%= singular_table_name %>_path, :class => 'btn btn-primary', :title => t(:new) %>
  <%%end%>
  <%%if can? :index, <%= singular_table_name.titlecase %> %>
  <%%=  link_to t(:export_this_page_csv), <%= plural_table_name %>_path(format: "csv"), :class=>"btn" %>
  <%%=  link_to t(:export_this_page_xls), <%= plural_table_name %>_path(format: "xls"), :class=>"btn"%>
  <%%=  link_to t(:export_all_csv), <%= plural_table_name %>_path(format: "csv", :all => true), :class=>"btn"%>
  <%%=  link_to t(:export_all_xls), <%= plural_table_name %>_path(format: "xls", :all => true), :class=>"btn"%>
  <%%end%>
  <div class="btn-group">
  </div>
</div>

<%%content_for :breadcrumb do%>
<ul class="breadcrumb">
  <li><%%=link_to @current_user.branch.name, @current_user.branch%><span class="divider">/</span></li>
  <li class="active"><%%=t(:index)%></li>
</ul>
<%%end%>

<div class="well">
  <table class="table">
    <thead>
      <tr>
        <th><%%= t'.id' %></th>
        <% attributes.each do |attribute| -%>
          <th><%%= t'.<%= attribute.human_name.downcase.tr(" ", "_") %>' %></th>
        <% end -%>
        <th><%%= t(:actions) %></th>
      </tr>
    </thead>
    <tbody>
      <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
      <tr>
        <%%if can? :show, <%= singular_table_name.titlecase%> %>
        <td><%%=link_to <%= singular_table_name %>.id, <%= singular_table_name %>, :class => 'btn btn-mini', :title => t(:show)%></td>
        <%%else%>
        <td><%%= label <%= singular_table_name %>.id, <%= singular_table_name %>.id, :class => 'btn btn-mini', :title => t(:show)%></td>
        <%%end%>
        <% attributes.each do |attribute| -%>
          <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
        <% end -%>
        <td>         
          <ul class="nav nav-pills">
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#" title='<%%=t(:actions)%>'><i class="icon-cog"></i>&nbsp;<i class="icon-caret-down"></i></a>
              <ul class="dropdown-menu">
                <%%if can? :show, <%= singular_table_name.titlecase %> %>
                <li>
                  <%%= link_to <%= singular_table_name %> do %>
                  <i class="icon-eye-open"></i>&nbsp;&nbsp;<%%=t(:show, :default => t("helpers.links.show"))%>
                  <%%end%>
                </li>
                <%%end%>
                <%%if can? :edit, <%= singular_table_name.titlecase %> %>
                <li>
                  <%%= link_to edit_<%= singular_table_name %>_path(<%= singular_table_name %>) do %>
                  <i class="icon-pencil"></i>&nbsp;&nbsp;<%%=t(:edit, :default => t("helpers.links.edit"))%>
                  <%%end%>
                </li>
                <%%end%>
                <%%if can? :destroy, <%= singular_table_name.titlecase %> %>
                <li>
                  <%%= link_to  <%= singular_table_name %>, :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } do %>
                  <i class="icon-trash"></i>&nbsp;&nbsp;<%%=t(:destroy, :default => t("helpers.links.destroy"))%>
                  <%%end%>
                </li>
                <%%end%>
              </ul>
            </li>
          </ul>
        </td>
      </tr>
      <%% end %>
    </tbody>
  </table>
</div>
<br />

<div class="page_info">
  <%%= page_entries_info @<%= plural_table_name %> %>
  <%%= will_paginate @<%= plural_table_name %>, :renderer => BootstrapPagination::Rails %>
</div>
