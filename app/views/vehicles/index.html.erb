<h1>Listing vehicles</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Brand</th>
    <th>Sub brand</th>
    <th>Model</th>
    <th>Plate</th>
    <th>Serial numero</th>
    <th>Color</th>
    <th>Stolen</th>
    <th>Status</th>
    <th>Details</th>
    <th>Person</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @vehicles.each do |vehicle| %>
  <tr>
    <td><%= vehicle.id %></td>
    <td><%= vehicle.brand %></td>
    <td><%= vehicle.sub_brand %></td>
    <td><%= vehicle.model %></td>
    <td><%= vehicle.plate %></td>
    <td><%= vehicle.serial_numero %></td>
    <td><%= vehicle.color %></td>
    <td><%= vehicle.stolen %></td>
    <td><%= vehicle.status %></td>
    <td><%= vehicle.details %></td>
    <td><%= vehicle.person_id %></td>
    <td><%= link_to 'Show', vehicle %></td>
    <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
    <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

