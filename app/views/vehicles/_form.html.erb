<%= form_for(@vehicle) do |f| %>
  <% if @vehicle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

      <ul>
        <% @vehicle.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t'.brand' %><br />
    <%= f.text_field :brand %>
  </div>
  <div class="field">
    <%= f.label t'.line' %><br />
    <%= f.text_field :line %>
  </div>
  <div class="field">
    <%= f.label t'.model' %><br />
    <%= f.number_field :model %>
  </div>
  <div class="field">
    <%= f.label t'.serial_number' %><br />
    <%= f.text_field :serial_number %>
  </div>
  <div class="field">
    <%= f.label t'.color' %><br />
    <%= f.text_field :color %>
  </div>
  <div class="field">
    <%= f.label t'.stolen' %><br />
    <%= f.check_box :stolen %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </div>
  <div class="field">
    <%= f.label t'.details' %><br />
    <%= f.text_area :details %>
  </div>
  <div class="field">
    <%= f.label :person_id %><br />
    <%= f.collection_select(:person_id, Person.all, :id, :fullname, {:prompt => "seleccione persona"}) %>
  </div>
  <div class="actions">
    <%= f.submit nil, :class => "btn btn-primary"%>
  </div>
<% end %>
