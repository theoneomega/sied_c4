
<div class="block">
  <a href="#weapons" class="block-heading" data-toggle="collapse">New weapon</a>
  <div id="weapons" class="block-body collapse in">
    <div class="control-group">

      <div class="field">
        <%= f.label :brand %><br />
        <%= f.text_field :brand %>
      </div>
      <div class="field">
        <%= f.label :model %><br />
        <%= f.text_field :model %>
      </div>
      <div class="field">
        <%= f.label :serial_number %><br />
        <%= f.text_field :serial_number %>
      </div>
      <div class="field">
        <%= f.label :weapon %><br />
        <%= f.text_field :weapon %>
      </div>
      <div class="field">
        <%= f.label :caliber %><br />
        <%= f.text_field :caliber %>
      </div>

      <div class="field">
        <%= f.label :person_id %><br />
        <%= f.collection_select(:person_id, Person.all, :id, :fullname, {:prompt => "seleccione persona"}) %>
      </div>
      <div class="field">
        <%= f.label :weapon_type_id %><br />
        <%= f.collection_select(:weapon_type_id, WeaponType.all, :id, :desc, {:prompt => "seleccione tipo de arma"}) %>
      </div>
      <%=f.link_to_remove "remove weapon",:class => 'btn btn-danger'%>
    </div>
  </div>
</div>