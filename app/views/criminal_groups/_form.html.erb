<%= nested_form_for(@criminal_group) do |f| %>
  <% if @criminal_group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@criminal_group.errors.count, "error") %> prohibited this criminal_group from being saved:</h2>

      <ul>
        <% @criminal_group.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :vehicle_id %><br />
    <%= f.collection_select(:vehicle_id, Vehicle.all, :id, :fulldescription, {:prompt => "seleccione vehiculo"}) %>
  </div>

<div style="display: inline-block;" class="block ui-state-hover">
    <%=f.fields_for :weapons do |builder| %>
      <%= render 'weapons_fields', :f => builder %>
    <%end%>
    <%= f.link_to_add "add weapon", :weapons, :class => "btn btn-primary" %>
  </div>

<br>
  <div class="field">
    <%= f.label :drug_id %><br />
    <%= f.collection_select(:drug_id, Drug.all, :id, :kind, {:prompt => "seleccione tipo de droga"}) %>
  </div>

  <div class="field">
    <%= f.label :area_id %><br />
    <%= f.collection_select(:area_id, Area.all, :id, :description, {:prompt => "seleccione area"}) %>
  </div>
  <div class="actions">
    <%= f.submit nil, :class => "btn btn-primary"%>
  </div>
<% end %>