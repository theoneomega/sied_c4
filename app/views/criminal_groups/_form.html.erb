  </div>

  <div class="field">
    <%= f.label :weapon_id %><br />
    <%= f.collection_select(:weapon_id, Weapon.all, :id, :fulldescription, {:prompt => "seleccione arma"}) %>
  </div>
  <div class="field">
    <%= f.label :drug_id %><br />
    <%= f.collection_select(:drug_id, Drug.all, :id, :kind, {:prompt => "seleccione tipo de droga"}) %>
  </div>
  <div class="field">
    <%= f.label :area_id %><br />
    <%= f.collection_select(:area_id, Area.all, :id, :description, {:prompt => "seleccione area"}) %>
  </div>
