<h1>Listing people</h1>
<div  class="well ">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th><%=t(:ci)%> </th>
        <th>name</th>
        <th>Alias</th>
        <th>Birth date</th>
        <th>Originative</th>
        <th>Genre</th>
        <th>Record</th>
        <th>Profession</th>
        <th>Observations</th>
        <th>Status</th>
        <th>actions</th>

      </tr>
    </thead>
    <% @people.each do |person| %>
      <tbody>
        <tr>
          <td><%= person.ci %></td>
          <td><%= person.fullname %></td>
          <td><%= person.alias %></td>
          <td><%= person.birth_date %></td>
          <td><%= person.originative %></td>
          <td><%= person.genre %></td>
          <td><%= person.record %></td>
          <td><%= person.profession %></td>
          <td><%= person.observations %></td>
          <td><%= person.status.description  %></td>
          <td>
            <ul class="nav nav-pills">
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#" title='<%=t(:actions)%>'><i class="icon-cog"></i>&nbsp;<i class="icon-caret-down"></i></a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Show', person %></li>
                  <li><%= link_to 'Edit', edit_person_path(person) %></li>
                  <li><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                </ul>
              </li>
            </ul>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br />

<%= link_to 'New Person', new_person_path, :class=>"btn btn-primary" %>
