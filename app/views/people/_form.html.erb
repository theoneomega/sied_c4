<%= form_for(@person) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
        <% @person.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t(:ci) %><br />
    <%= f.text_field :ci %>
  </div>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name1 %><br />
    <%= f.text_field :last_name1 %>
  </div>
  <div class="field">
    <%= f.label :last_name2 %><br />
    <%= f.text_field :last_name2 %>
  </div>
  <div class="field">
    <%= f.label :alias %><br />
    <%= f.text_field :alias %>
  </div>

  <div class="field">
    <%= f.label :birth_date %><br />
    <%= f.text_field :birth_date, :id => "dp1"%> <i class="icon-th"></i>
  </div>
  <div class="field">
    <%= f.label :originative %><br />
    <%= f.text_field :originative %>
  </div>
  <div class="field">
    <%= f.label :genre %><br />
    <%= f.text_field :genre %>
  </div>
  <div class="field">
    <%= f.label :record %><br />
    <%= f.check_box :record %>
  </div>
  <div class="field">
    <%= f.label :profession %><br />
    <%= f.text_field :profession %>
  </div>
  <div class="field">
    <%= f.label :observations %><br />
    <%= f.text_area :observations %>
  </div>
  <div class="field">
    <%= f.label :status_id %><br />
    <%= f.collection_select(:status_id, Status.where(:status_type => "persona"), :id, :description, {:prompt => "seleccione el estatus de la persona"}) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<script>
  $(function() {
    window.prettyPrint && prettyPrint();
    $('#dp1').datepicker({
      language: 'es',
      format: 'yyyy-mm-dd',
      todayBtn: 'linked'
    });

    $('#dp2').datepicker();
    $('#btn2').click(function(e) {
      e.stopPropagation();
      $('#dp2').datepicker('update', '03/17/12');
    });

    $('#dp3').datepicker();


    var startDate = new Date(2012, 1, 20);
    var endDate = new Date(2012, 1, 25);
    $('#dp4').datepicker()
            .on('changeDate', function(ev) {
      if (ev.date.valueOf() > endDate.valueOf()) {
        $('#alert').show().find('strong').text('The start date can not be greater then the end date');
      } else {
        $('#alert').hide();
        startDate = new Date(ev.date);
        $('#startDate').text($('#dp4').data('date'));
      }
      $('#dp4').datepicker('hide');
    });
    $('#dp5').datepicker()
            .on('changeDate', function(ev) {
      if (ev.date.valueOf() < startDate.valueOf()) {
        $('#alert').show().find('strong').text('The end date can not be less then the start date');
      } else {
        $('#alert').hide();
        endDate = new Date(ev.date);
        $('#endDate').text($('#dp5').data('date'));
      }
      $('#dp5').datepicker('hide');
    });

    //inline    
    $('#dp6').datepicker({
      todayBtn: 'linked'
    });

    $('#btn6').click(function() {
      $('#dp6').datepicker('update', '15-05-1984');
    });

    $('#btn7').click(function() {
      $('#dp6').data('datepicker').date = null;
      $('#dp6').find('.active').removeClass('active');
    });
  });
</script>