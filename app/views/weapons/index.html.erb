<h1>Listing weapons</h1>
<div  class="well ">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>id</th>
        <th><%= t'.brand' %> </th>
        <th>Model</th>
        <th>Serial number</th>
        <th>Weapon</th>
        <th>Caliber</th>
        <th>Person</th>
        <th>Weapon type</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <% @weapons.each do |weapon| %>
      <tr>
        <td><%= weapon.id %></td>
        <td><%= weapon.brand %></td>
        <td><%= weapon.model %></td>
        <td><%= weapon.serial_number %></td>
        <td><%= weapon.weapon %></td>
        <td><%= weapon.caliber %></td>
        <td><%= weapon.person_id %></td>
        <td><%= weapon.weapons_type.description %></td>
        <td>
          <ul class="nav nav-pills">
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#" title='<%=t(:actions)%>'><i class="icon-cog"></i>&nbsp;<i class="icon-caret-down"></i></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Show', weapon %></li>
                <li><%= link_to 'Edit', edit_weapon_path(weapon) %></li>
                <li><%= link_to 'Destroy', weapon, method: :delete, data: { confirm: 'Are you sure?' } %></li>
              </ul>
            </li>
          </ul>
        </td>
      </tr>
    <% end %>
  </table>

  <br />

  <%= link_to 'New Weapon', new_weapon_path, :class=>"btn btn-primary" %>
