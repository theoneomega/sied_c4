<h1>Listing weapon_types</h1>
<div  class="well ">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Id</th>
        <th>Description</th>
        <th>actions</th>
      </tr>
    </thead>
    <% @weapon_types.each do |weapon_type| %>
      <tr>
        <td><%= weapon_type.id %></td>
        <td><%= weapon_type.desc %></td>
        <td>
          <ul class="nav nav-pills">
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#" title='<%=t(:actions)%>'><i class="icon-cog"></i>&nbsp;<i class="icon-caret-down"></i></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Show', weapon_type %></li>
                <li><%= link_to 'Edit', edit_weapon_type_path(weapon_type) %></li>
                <li><%= link_to 'Destroy', weapon_type, method: :delete, data: { confirm: 'Are you sure?' } %></li>
              </ul>
            </li>
          </ul>
        </td>
      </tr>
    <% end %>
  </table>

  <br />

  <%= link_to 'New Weapon type', new_weapon_type_path, :class => "btn btn-primary" %>
